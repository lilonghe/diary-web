.diaryItem{
    margin-bottom: 20px;
    border: 1px dashed #CCC;
    padding: 20px;
    position: relative;

    .meta {
        position: absolute;
        right: 10px;
        bottom: 10px;
        text-align: right;
        .tag{
            padding: 0 8px;
            line-height: 20px;
            margin-left: 8px;
            border-radius: 4px;
        }
    }
    .time {
        color: #999;
        line-height: 20px;
        margin-right: 4px;
    }
}