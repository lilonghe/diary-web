.diarySummary {
    margin-bottom: 20px;
}

.diaryItem{
    margin-bottom: 20px;
    border: 1px dashed #CCC;
    padding: 20px;
    position: relative;
    line-height: 1.4;
    overflow: hidden;
    .view {
        min-height: 1em;
        p {
            margin-bottom: 5px;
        }
    }

    .meta {
        position: absolute;
        right: 10px;
        bottom: 10px;
        text-align: right;

    }
    .time {
        color: #999;
        line-height: 20px;
        margin-right: 4px;
    }
}
.tag{
    padding: 2px 8px;
    line-height: 20px;
    margin-right: 8px;
    border-radius: 4px;
}

.itemHead {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
}

.activeItem {
    width: 500px;
    padding: 10px 20px;
    padding-bottom: 10px;
    background-color: rgba(255, 220, 53, 0.39);
    position: relative;
    min-height: 260px;
}
.itemView {
    line-height: 2;
    padding-bottom: 10px;
}
    .itemAction {
        //overflow: hidden;
        position: absolute;
        right: -40px;
        top: 0;
        display: flex;
        flex-direction: column;
        height: 100%;
        justify-content: space-between;
        width: 30px;
    }
    .nextBtn {
        position: absolute;
        bottom: 0;
    }
    .prevBtn {
        position: absolute;
        top: 0;
    }

        .nextBtn,.prevBtn {
            border: 1px solid #333;
            cursor: pointer;
            opacity: 0.5;
            transition: all 0.1s;
            width: 2em;
            box-sizing: border-box;
            text-align: center;
            padding: 4px 0;
            background-color: rgba(255, 220, 53, 0.39);
        }
.nextBtn:hover,.prevBtn:hover {
    opacity: .8;
}
@media screen and (max-width: 414px) { 
    .diaryItem {
        padding-bottom: 50px;
        padding: 1em;    
        
        .meta {
            position: static;    
            margin-bottom: -5px;
            .tag {
                display: inline-block;
                text-align: left; 
                margin-bottom: 5px;   
                vertical-align: middle;
            }
        }
    }

    .activeItem {
        width: 100%;
    }
    .itemAction {
        position: relative;
        width: auto;
        right: 0;
        flex-direction: row;
    }

    .itemView {
        min-height: 300px;
    }

    .nextBtn,.prevBtn {
        position: static;
        width: auto;
        flex: 1;
    }
}